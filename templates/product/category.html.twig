{% extends "base.html.twig" %}

{% block title %}
    Catégorie : {{ slug }}
{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Acceuil</a></li>
        <li class="breadcrumb-item active">{{ category.name }}</li>
    </ol>

    <h1>Catégorie : {{ category.name }}</h1>

    <div class="row">
        {% for p in category.products %}
            <div class="col-3">
                <div class="card">
                    <img src="{{ p.mainPicture }}" class="img-fluid" alt="image du produit">
                    <div class="card-body">
                        <h4 class="card-title">{{ p.name }} ({{ p.price / 100}}€)</h4>
                        <span class="badge badge-warning">{{ p.category.name }}</span>
                        <p class="card-text">{{ p.shortDescription }}</p>
                        <a href="{{ path('product_show', {'category_slug': p.category.slug, 'product_slug': p.slug})}}" class="btn btn-primary btn-sm">Détails</a>
                        <a href="#" class="btn btn-sucess btn-sm">Ajouter</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}