{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
    <h1>Votre panier</h1>

    {% if items | length > 0 %}

    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.product.name }}</td>
                    <td>{{ item.product.price / 100 }}</td>
                    <td>
                        <a href="{{ path("cart_add", {'id': item.product.id}) }}?returnToCart=true" class="btn btn-primary">
                            <i class="fas fa-plus"></i>
                        </a>
                        {{ item.qty }}
                        <a href="{{ path("cart_decrement", {'id': item.product.id})}}" class="btn btn-primary">
                            <i class="fas fa-minus btn-sm"></i>
                        </a>
                    </td>
                    <td>{{ item.total }}</td>
                    <td>
                        <a href="{{ path("cart_delete", {'id': item.product.id}) }}" class="btn-sm btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">Total : </td>
                <td>{{ totalPrice }}</td>
            </tr>
        </tfoot>
    </table>
    {% else %}
        <h2>Votre panier est vide !</h2>
    {% endif %}
{% endblock %}
